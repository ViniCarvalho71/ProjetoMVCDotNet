@model ProjetoMVCDotNet.Models.Contato;

@{
    ViewData["Title"] = "Deletar Contato";
}

<h1 style="color:red;">Deseja realmente deletar esse eontato? Essa operação é irreversível</h1>
 <div>
    <dt class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Nome):
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Nome)
        </dt>
        <hr>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Telefone):
        </dt>
        
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Telefone)
        </dt>
        <hr>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(x => x.Ativo):
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(x => x.Ativo)
        </dt>
    </dt>
 </div>
<form asp-action="Deletar">
    <input type="submit" class="btn btn-danger" value="Deletar">
</form>
 <a asp-action="Index">Voltar</a>